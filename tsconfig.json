{
  "compilerOptions": {
    "target": "es5",

    "module": "CommonJS",
		"lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
		"isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*.tsx"],
  "exclude": [
    "node_modues",
    "configs",
    "test",
    "release",
    "src/dist",
    "dll"
  ]
}
